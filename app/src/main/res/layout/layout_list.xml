<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_color_gray"
        android:padding="@dimen/margin_8"
        android:visibility="visible"

        />

    <LinearLayout
        android:id="@+id/container_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/main_bg_color"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_loading"
            android:layout_width="@dimen/image_error"
            android:layout_height="@dimen/image_error"
            android:background="@drawable/ic_error_gray" />

        <TextView
            android:id="@+id/tv_loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_32"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_16"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size_header" />

        <Button
            android:id="@+id/btn_loading_action"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_gradient"
            android:text="تلاش مجدد"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"

            />

    </LinearLayout>

</RelativeLayout>

